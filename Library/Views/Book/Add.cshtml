@using Library.Models.BookViewModels
@model AddBookViewModel
@{
    ViewBag.Title = "Add Book";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 coll-xl-6">
        <form method="post" action="Add">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title:</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Author" class="form-label">Author</label>
                <input asp-for="@Model.Author" class="form-control" aria-required="true" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Pages" class="form-label">Pages</label>
                <input asp-for="@Model.Pages" class="form-control" aria-required="true"></>
                <span asp-validation-for="Pages" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ISBN" class="form-label">ISBN</label>
                <input asp-for="@Model.ISBN" class="form-control" aria-required="true"></>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Image" class="form-label">Image</label>
                <input asp-for="@Model.Image" class="form-control" aria-required="true"></>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.PublishingYear" class="form-label">Year of publishing:</label>
                <input asp-for="@Model.PublishingYear" class="form-control" aria-required="true"></>
                <span asp-validation-for="PublishingYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="" class="form-label">Publisher:</label>
                <br />
                <select asp-for="PublisherId" asp-items="@ViewBag.PublisherId" class="form-control"></select>
            </div>

            <div class="btn-group-sm">
                <button type="submit" class="btn btn-primary" style="background-color:#FFAE42; border-color:#FFAE42">Add book</button>
           
            
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-controller="Publisher" asp-action="Add" class="btn btn-primary" style="background-color:#FFAE42; border-color:#FFAE42">Add Publisher</a>
                }
            </div>
            <br />
          
        </form>
    </div>
</div>