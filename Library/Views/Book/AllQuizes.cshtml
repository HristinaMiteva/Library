@model IEnumerable<BooksViewModel>

<h1 style="color:#F88017">Quizes:</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in this.Model)
        {
                <tr>
                    <td>
                        <img class="card-ing-top" src="@book.Image" alt="Book Image" height="150" width="100">
                    </td>
                    <td>@book.Title</td>
                    <td>
                            @if (book.Title == "The Tale of Jemima Puddle-Duck")
                            {
                            <a asp-controller="Book" asp-action="Quiz" class="btn btn-primary" style="background-color:#FFAE42; border-color:#FFAE42">Quiz</a>
                            }
                            @if (book.Title == "The Secret Garden")
                            {
                            <a asp-controller="Book" asp-action="Quiz2" class="btn btn-primary" style="background-color:#FFAE42; border-color:#FFAE42">Quiz</a>
                            }
                            @if (book.Title == "Peter Pan")
                            {
                            <a asp-controller="Book" asp-action="Quiz3" class="btn btn-primary" style="background-color:#FFAE42; border-color:#FFAE42">Quiz</a>
                            }
                    @if (book.Title == "Harry Potter and the Sorcerer's Stone")
                    {
                        <a asp-controller="Book" asp-action="Quiz4" class="btn btn-primary" style="background-color:#FFAE42; border-color:#FFAE42">Quiz</a>
                    }
                    @if (book.Title == "The Gruffalo")
                    {
                        <a asp-controller="Book" asp-action="Quiz5" class="btn btn-primary" style="background-color:#FFAE42; border-color:#FFAE42">Quiz</a>
                    }
                    @if (book.Title == "Goodnight Moon")
                    {
                        <a asp-controller="Book" asp-action="Quiz6" class="btn btn-primary" style="background-color:#FFAE42; border-color:#FFAE42">Quiz</a>
                    }
                    @if (book.Title == "If You Give a Mouse a Cookie")
                    {
                        <a asp-controller="Book" asp-action="Quiz7" class="btn btn-primary" style="background-color:#FFAE42; border-color:#FFAE42">Quiz</a>
                    }
                    @if (book.Title == "Corduroy")
                    {
                        <a asp-controller="Book" asp-action="Quiz8" class="btn btn-primary" style="background-color:#FFAE42; border-color:#FFAE42">Quiz</a>
                    }
                    @if (book.Title == "The Lorax")
                    {
                        <a asp-controller="Book" asp-action="Quiz9" class="btn btn-primary" style="background-color:#FFAE42; border-color:#FFAE42">Quiz</a>
                    }
                    </td>
                </tr>
        }
    </tbody>
</table>