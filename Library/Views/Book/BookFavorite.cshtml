@model IEnumerable<BooksViewModel>


<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date of reading:</th>
            <th>Pages</th>
            <th>Author:</th>
            <th>ISBN</th>
            <th>BookCover</th>
            <th>Publishing year:<th>
                    @*<th>Publisher:</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (BooksViewModel book in this.Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@DateTime.Now.ToString()</td>
                <td>@book.Pages</td>
                <td>@book.Author</td>
                <td>@book.ISBN</td>
                <td>
                    <img class="card-ing-top" src="@book.Image" alt="Book Image" height="80" width="50">
                </td>
                <td>@book.PublishingYear</td>
                @*  <td>@book.PublisherName</td>*@
                <td> <a asp-controller="Book" asp-action="RemoveFromFavorites" asp-route-bookId="@book.Id" class="btn btn-warning">Remove</a></td>
            </tr>
        }
    </tbody>
</table>