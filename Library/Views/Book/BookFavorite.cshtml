@model IEnumerable<BooksViewModel>

<table>
    <thead>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Pages</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Publishing Year</th>
            <th>Price (lv.)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (BooksViewModel book in this.Model)
        {
            <tr>
                <td>
                    <img src="@book.Image" alt="Book Image">
                </td>
                <td>@book.Title</td>
                <td>@book.Pages</td>
                <td>@book.Author</td>
                <td>@book.ISBN</td>
                <td>@book.PublishingYear</td>
                <td>@book.Price</td>
                <td>
                    <a asp-controller="Book" asp-action="RemoveFromFavorites" asp-route-bookId="@book.Id" class="btn btn-primary" style="background-color:#FFAE42; border:none; color:black">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>