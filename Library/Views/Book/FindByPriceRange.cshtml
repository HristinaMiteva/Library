@model IEnumerable<BooksViewModel>
<center>
    <h3 style="color:#FFAE42">Search by price range:</h3>
<form asp-action="FindByPriceRange" method="post">
   
    <div>
        <label for="minPrice">Minimum Price:</label>
        <input type="number" id="minPrice" name="minPrice" value="0">
    
   
        <label for="maxPrice">Maximum Price:</label>
        <input type="number" id="maxPrice" name="maxPrice" value="0">
    </div>
    <br />
  <div>
            <button type="submit" style="background-color:#F88017; border:none; border-radius:5px; padding: 8px 16px; color: white; font-weight: bold; cursor: pointer;">Search</button>

            <style>
                .nav-link:hover {
                    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
                }
            </style>

    </div>
    </form>
    </center>


@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Pages</th>
                <th>Author</th>
                <th>Publishing House</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        <img src="@book.Image" alt="Book Image">
                    </td>
                    <td>@book.Title</td>
                    <td>@book.Pages</td>
                    <td>@book.Author</td>
                    <td>@book.PublisherName</td>
                    <td>@book.Price (lv.)</td>
                </tr>
            }
        </tbody>
    </table>
}


